<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab222a.controller.WorkoutTemplateController" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Left Side: Exercises in Workout -->
    <VBox spacing="10" prefWidth="200">
        <Label text="Exercises in Workout:" style="-fx-font-size: 14px;"/>
        <ListView fx:id="exerciseListView" prefHeight="300" prefWidth="180"/>
    </VBox>

    <!-- Right Side: Workout Details -->
    <VBox spacing="10">
        <Label text="Create Workout Template" style="-fx-font-size: 18px;"/>

        <Label text="Workout Name:"/>
        <TextField fx:id="workoutNameField" promptText="Enter workout name"/>

        <Label text="Select an Exercise:"/>
        <ComboBox fx:id="exerciseChoiceBox" promptText="Choose an exercise"/>

        <Button text="Add Exercise" onAction="#handleAddExercise"/>
        <Button text="Remove Exercise" onAction="#handleRemoveExercise"/>
        <Button text="Save Workout" onAction="#handleSaveWorkout"/>
        <Button text="Back" onAction="#handleBackButtonClick"/>
    </VBox>
</HBox>
