<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab222a.controller.WorkoutTemplateController" spacing="15">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Create Workout Template" style="-fx-font-size: 18px;"/>

    <Label text="Workout Name:"/>
    <TextField fx:id="workoutNameField" promptText="Enter workout name"/>

    <Label text="Notes:"/>
    <TextField fx:id="notesField" promptText="Enter any specific notes"/>

    <Label text="Exercises in Workout:"/>
    <ListView fx:id="exerciseListView"/>

    <Button text="Add Exercise" onAction="#handleAddExercise"/>
    <Button text="Save Workout" onAction="#handleSaveWorkout"/>

</VBox>
