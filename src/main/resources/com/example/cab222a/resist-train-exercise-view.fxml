<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab222a.controller.ResistTrainExerciseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Select an item to view or edit." />
    <HBox VBox.vgrow="ALWAYS" spacing="20.0">
        <VBox spacing="10.0">
            <ListView fx:id="itemListView" />
            <Button text="New" maxWidth="Infinity" onAction="#onAdd"/>
        </VBox>
        <VBox spacing="10.0" prefWidth="400">
            <VBox spacing="10.0" fx:id="itemContainer">
                <Label text="Details" alignment="TOP_CENTER"/>
                <GridPane hgap="5.0" vgap="5.0" alignment="TOP_CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="70" />
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Exercise Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>
                </GridPane>
                <HBox maxWidth="Infinity" alignment="CENTER">
                    <Button text="Confirm" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onEditConfirm"/>
                    <Button text="Cancel" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onCancel"/>
                    <Button text="Delete" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onDelete"/>
                </HBox>
            </VBox>
            <VBox spacing="10.0">
                <HBox maxWidth="Infinity" alignment="CENTER">
                    <Button text="Edit Exercise" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onEditButtonClick" fx:id="editButton"/>
                    <Button text="Go Back" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onGoBackButtonClick" fx:id="goBackButton"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>