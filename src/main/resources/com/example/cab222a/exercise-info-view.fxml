<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.control.TextField?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab222a.controller.ExerciseInfoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Select an exercise to view or edit." />
    <HBox VBox.vgrow="ALWAYS" spacing="20.0">
        <VBox spacing="10.0">
            <TextField fx:id="searchTextField" promptText="Search by name or muscle group" />
            <HBox spacing = "10.0">
                <ListView fx:id="itemListView" />
            </HBox>
            <Button text="New" maxWidth="Infinity" onAction="#onAdd"/>
        </VBox>
        <VBox spacing="10.0" prefWidth="400">
            <VBox spacing="10.0" fx:id="itemContainer">
                <Label fx:id="detailsLabel" text="Details" alignment="TOP_CENTER"/>
                <GridPane fx:id="gridPaneContainer" hgap="5.0" vgap="5.0" alignment="TOP_CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="70" />
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                </GridPane>
                <HBox maxWidth="Infinity" alignment="CENTER">
                    <Button text="Confirm" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onEditConfirm"/>
                    <Button text="Cancel" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onCancel"/>
                    <Button text="Delete" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onDelete"/>
                </HBox>
            </VBox>
            <VBox spacing="10.0">
                <HBox maxWidth="Infinity" alignment="CENTER">
                    <Button text="More Details" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onMoreDetails" fx:id="moreDetailsButton"/>
                    <Button text="Edit Item" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onEditButtonClick" fx:id="editButton"/>
                    <Button text="Go Back" HBox.hgrow="ALWAYS" maxWidth="Infinity" onAction="#onGoBackButtonClick" fx:id="goBackButton"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox>