<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.cab222a.controller.MetricController"
          alignment="CENTER" hgap="10" vgap="10">

    <columnConstraints>
        <ColumnConstraints minWidth="150"/>
        <ColumnConstraints minWidth="300" />
    </columnConstraints>


    <rowConstraints>
        <RowConstraints minHeight="40" />
        <RowConstraints minHeight="40" />
        <RowConstraints minHeight="40" />
        <RowConstraints minHeight="40" />
        <RowConstraints minHeight="40" />
        <RowConstraints minHeight="40" />
    </rowConstraints>


    <Label text="Metric Tracker" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Label text="Weight:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="weightTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="BMI:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="bmiTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="bodyFatPercentage:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="bodyFatPercentageTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="hydrationLevels:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="hydrationLevelsTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Measurement:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="measurementTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />


    <Button text="Add Metric" fx:id="addMetricButton" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Button text="Update Metric" fx:id="updateMetricButton" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Button text="Delete Metric" fx:id="deleteMetricButton" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.halignment="RIGHT" />


    <TableView fx:id="metricTableView" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" />


    <Label fx:id="statusLabel" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" style="-fx-text-fill: green;" />
</GridPane>
