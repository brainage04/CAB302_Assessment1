<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.cab222a.controller.MetricController"
          alignment="CENTER" hgap="10" vgap="10">
    <!-- 设置列宽 -->
    <columnConstraints>
        <ColumnConstraints minWidth="150"/>
        <ColumnConstraints minWidth="300" />
    </columnConstraints>

    <!-- 设置行 -->
    <rowConstraints>
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="300" />
        <RowConstraints minHeight="50" />
    </rowConstraints>


    <Label text="Metric Tracker" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 18px; -fx-font-weight: bold;" />


    <Label text="Metric Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <ComboBox fx:id="metricTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <Label text="Measurement:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="measurementTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />


    <Button text="Add Metric" fx:id="addMetricButton" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button text="Update Metric" fx:id="updateMetricButton" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button text="Delete Metric" fx:id="deleteMetricButton" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.halignment="RIGHT" />


    <TableView fx:id="metricTableView" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" />


    <Label fx:id="statusLabel" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2" style="-fx-text-fill: green;" />
</GridPane>
