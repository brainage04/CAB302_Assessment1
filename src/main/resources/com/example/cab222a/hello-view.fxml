<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<VBox spacing="20.0" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab222a.controller.HelloController" stylesheets="@style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fx:id="logo" preserveRatio="true"/>

    <Label text="Welcome to DT's Fitness Tracker. Please login or register to continue."
           wrapText="true"
    />

    <HBox spacing="20.0" alignment="CENTER">
        <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick"/>
        <Button fx:id="registerButton" text="Register" onAction="#onRegisterButtonClick"/>
    </HBox>
</VBox>